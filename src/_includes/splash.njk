<div id="hero-copy" class="flex flex-col max-w-screen-xl w-full sm:mb-0 mb-24">

    <div class="flex flex-row">
      {%- if '/' == page.url -%}
        <div id="hero-mobile-image" class="basis-full sm:basis-7/12 md:basis-6/12 lg:basis-5/12 sm:pb-4 sm:pb-16 pl-4 bg-[url('/_assets/mobile_temp_2.webp')]">
      {%- elif '/custom-t-shirts/' in page.url -%}
        <div id="hero-mobile-image" class="basis-full sm:basis-7/12 md:basis-6/12 lg:basis-5/12 sm:pb-4 sm:pb-16 pl-4 bg-[url('/_assets/mobile_temp_1.webp')]">
      {%- elif '/embroidery/' in page.url -%}
        <div id="hero-mobile-image" class="basis-full sm:basis-7/12 md:basis-6/12 lg:basis-5/12 sm:pb-4 sm:pb-16 pl-4 bg-[url('/_assets/mobile_temp_3.webp')]">
      {%- else -%}
        <div id="hero-mobile-image" class="basis-full sm:basis-7/12 md:basis-6/12 lg:basis-5/12 sm:pb-4 sm:pb-16 pl-4 bg-[url('/_assets/mobile_temp_2.webp')]">
      {%- endif -%}
      

        <h1 class="font-black text-3xl mb-4">
          {% if cityService %}
            {{ cityService.hero | safe }}
          {% elseif service %}
            {{ service.hero | safe }}
          {% elseif city %}
            {{ city.hero | safe }}
          {% else %}
            {{ site.hero | safe }}
          {% endif %}
        </h1>

        <h2 class="text-md font-bold mb-4">
          {% if cityService %}
            {{ cityService.heroSub | safe }}
          {% elseif service %}
            {{ service.heroSub | safe }}
          {% elseif city %}
            {{ city.heroSub | safe }}
          {% else %}
            {{ site.heroSub | safe }}
          {% endif %}
        </h2>
        
        <div class="flex gap-x-4">
          <button class="bg-red-500 text-white text-md sm:text-lg rounded-full mb-4 p-2 px-6 sm:text-sm poppins-medium"> <a id="call-now-hero-btn" href="tel:619-312-0941">CALL @ 619-312-0941</a> </button>
          <img src="/_assets/arrow-1.webp" alt="arrow">
        </div>
        

        <div class="copy-text">
          {% if cityService %}
            {{ cityService.heroCopy | safe }}
          {% elseif service %}
            {{ service.heroCopy | safe }}
          {% elseif city %}
            {{ city.heroCopy | safe }}
          {% else %}
            {{ site.heroCopy | safe }}
          {% endif %}
        </div>
      
      </div>

      {%- if '/' == page.url -%}
        <div class="basis-0 sm:basis-5/12 md:basis-6/12 lg:basis-7/12 bg-[url('/_assets/basic-background.webp')]" id="hero-image"></div>
      {%- elif '/custom-t-shirts/' in page.url -%}
        {%- if '/santee/' in page.url -%}
          <div class="basis-0 sm:basis-5/12 md:basis-6/12 lg:basis-7/12 bg-[url('/_assets/santee-background.webp')] md:h-[500px]" id="hero-image"></div>
        {%- else -%}
          <div class="basis-0 sm:basis-5/12 md:basis-6/12 lg:basis-7/12 bg-[url('/_assets/t-shirt-background.webp')] md:h-[500px]" id="hero-image"></div>
        {%- endif -%}
      {%- elif '/embroidery/' in page.url -%}
        {%- if '/santee/' in page.url -%}
          <div class="basis-0 sm:basis-5/12 md:basis-6/12 lg:basis-7/12 bg-[url('/_assets/santee-background.webp')] md:h-[500px]" id="hero-image"></div>
        {%- else -%}
          <div class="basis-0 sm:basis-5/12 md:basis-6/12 lg:basis-7/12 bg-[url('/_assets/embroidery-background.webp')] md:h-[500px]" id="hero-image"></div>
        {%- endif -%}
      {%- else -%}
        <div class="basis-0 sm:basis-5/12 md:basis-6/12 lg:basis-7/12 bg-[url('/_assets/basic-background.webp')]" id="hero-image"></div>
      {%- endif -%}

    </div>
    
  </div>